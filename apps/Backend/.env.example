# Environment mode
NODE_ENV=development

# App settings
PORT=3000

# JWT configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=90000                  # Example: 90000 (90 seconds)
REFRESH_EXPIRES_IN=86400000          # Example: 24 hours in ms (86400000 ms)
JWT_ISSUER=your_app_issuer_here
JWT_AUDIENCE=your_app_audience_here
ACCESS_TOKEN_TTL=15m                  # Optional readable TTL
REFRESH_TOKEN_TTL=30d                # Optional readable TTL
JWT_PRIVATE_KEY=your_private_key_here
JWT_PUBLIC_KEY=your_public_key_here

# Email service credentials
EMAIL=your_email@example.com
EMAIL_PASSWORD=your_email_app_password_here

# OTP secret (for one-time password generation)
OTP_SECRET=your_otp_secret_here

# Google OAuth credentials
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/v1/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
