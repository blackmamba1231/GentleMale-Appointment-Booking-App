generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  STYLIST
  ADMIN
}
enum Services {
  HAIRCUT
  COLORING
  STYLING
  TREATMENT
  EXTENSIONS
  OTHER
}
model User {
  id              String   @id @default(cuid())
  email           String   @unique @db.VarChar(254) // lowercased; enforce app-side
  phoneE164       String?  @db.VarChar(20)          // +11234567890
  name            String?  @db.VarChar(120)
  avatarUrl       String?  @db.Text 
  OTP           String?  @db.VarChar(6)            // exprires in 5 mins
  OTP_expiresAt DateTime?
  // Verification & state
  emailVerified   Boolean  @default(false)
  phoneVerified   Boolean  @default(false)
  disabled        Boolean  @default(false)
  // Auditing
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastLoginAt     DateTime?

  // Relations
  services Service[]
  credentials     UserCredential?
  roles           UserRole[]
  sessions        Session[]
  accounts        Account[]  
  loginEvents     LoginEvent[]
  appointments    appointment[]
  @@index([phoneE164])
}
model Service{
  id String @id @default(cuid())
  name String @db.VarChar(100)
  price Int
  duration Int
  description String @db.Text
  icon String @db.VarChar(100)
  image String? @db.Text
  serviceId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([serviceId])
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}
model appointment {
  id String @id @default(cuid())
  customerId String 
  date DateTime 
  customerEmail String 
  customerPhone String?
  confirmed Boolean @default(false)
  service String @db.VarChar(100)
  expired Boolean @default(false)
  customer User @relation(fields: [customerId], references: [id], onDelete: Cascade)
}
model UserCredential {
  userId        String  @id
  passwordHash  String  @db.VarChar(255) // e.g., argon2id encoded string
  passwordAlgo  String  @default("argon2id") @db.VarChar(32)
  passwordSetAt DateTime @default(now())
  failedAttempts Int     @default(0)
  lockedUntil    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/**
 * Role-based access control. Flexible for staff vs customers.
 */
model UserRole {
  id     String @id @default(cuid())
  userId String
  role   Role

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role]) // a user canâ€™t have the same role twice
  @@index([role])
}

/**
 * Session token for cookie-based auth (server sessions) or API sessions.
 * If you use JWT-only, you might skip this and store refresh tokens instead.
 */
model Session {
  id                 String   @id @default(cuid())
  userId             String
  // Two-token pattern: short-lived access (in memory/JWT) + long-lived refresh (db)
  refreshTokenHash   String?  @db.VarChar(255)
  ip                 String?  @db.VarChar(64)
  createdAt          DateTime @default(now())
  expiresAt          DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String   @db.VarChar(254) 
  token      String   @unique          
  type       String   @db.VarChar(32)  
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@index([identifier, type])
  @@index([expiresAt])
}


model Account {
  id                String  @id @default(cuid())
  userId            String
  provider          String  @db.VarChar(40)   
  providerAccountId String  @db.VarChar(128) 
  accessToken       String? @db.Text
  refreshToken      String? @db.Text
  expiresAt         DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}


model LoginEvent {
  id         String   @id @default(cuid())
  userId     String?
  emailTried String?  @db.VarChar(254)
  success    Boolean
  reason     String?  @db.VarChar(64) 
  ip         String?  @db.VarChar(64)
  userAgent  String?  @db.VarChar(512)
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([userId])
}

